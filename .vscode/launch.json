{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (web)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        // 使用 "program" 指定您的主要 DLL 檔案的路徑
        "program": "${workspaceFolder}/ExpenseAPI/bin/Debug/net8.0/ExpenseAPI.dll",
        "args": [],
        "cwd": "${workspaceFolder}/ExpenseAPI",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/Views"
        }
      }
    ]
  }